{% extends 'baseAdmin.html.twig' %}

{% block title %}Reponse index{% endblock %}

{% block body %}
    <h1>Reponse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>Decision</th>
                <th>Reclamation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reponse in reponses %}
            <tr>
                <td>{{ reponse.id }}</td>
                <td>{{ reponse.status }}</td>
                <td>{{ reponse.decision }}</td>
                <td>
                    {% if reponse.idReclamation %}
                        <a href="{{ path('app_reclamation_show', {'id': reponse.idReclamation.id}) }}">{{ reponse.idReclamation.id }}</a>
                    {% else %}
                        No associated reclamation
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_reponse_show', {'id': reponse.id}) }}">show</a>
                    <a href="{{ path('app_reponse_edit', {'id': reponse.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reponse_new') }}">Create new</a>
{% endblock %}
