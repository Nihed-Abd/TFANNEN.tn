{% extends 'base.html.twig' %}

{% block title %}Edit Commande{% endblock %}

{% block body %}
    <section class="page-banner bg-image pt-130 pb-130">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-8">
                    <div class="checkout__item-left sub-bg">
                        <h3 class="mb-40">Modifier Commande</h3>
                        {{ form_start(form,{'attr': {'class': 'form','novalidate':'novalidate'}}) }}
                            <div class="mb-10">
                                {{ form_label(form.adresse) }}
                                {{ form_widget(form.adresse, {'attr': {'class': 'mb-20', 'placeholder': 'Adresse'}}) }}
                                  {{ form_errors(form.adresse) }}
                            </div>

                            <div class="mb-10">
                                {{ form_label(form.num_tel) }}
                                {{ form_widget(form.num_tel, {'attr': {'class': 'mb-20', 'placeholder': 'Numéro téléphone'}}) }}
                                  {{ form_errors(form.num_tel) }}
                            </div>
                            <div class="mb-10">
                                {{ form_label(form.prix) }}
                                {{ form_widget(form.prix, {'attr': {'class': 'mb-20', 'placeholder': 'Prix'}}) }}
                            </div>
                             <div class="mb-10">
                                {{ form_label(form.produits) }}
                                {{ form_widget(form.produits, {'attr': {'class': 'mb-20', 'placeholder': 'Produits'}}) }}
                            </div>
                            
                            <button class="orange-button" type="submit">
                                <i class="fas fa-plus mr-2"></i> {{button_label|default('Modifier Commande')}}
                            </button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
